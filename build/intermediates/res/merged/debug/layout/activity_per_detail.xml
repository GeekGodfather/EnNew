<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/white"
    >
    
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:gravity="center_horizontal"       
    android:orientation="vertical" >
    <include 
        layout="@layout/common_head"      
        />   
        
<RelativeLayout       
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:gravity="center"  
      >                
    <ImageView     
       android:id="@+id/per_detail_image_head"
       android:layout_width="60dp"
       android:layout_height="60dp"       
       android:layout_alignParentRight="true"  
       android:layout_centerVertical="true"    
       android:background="@color/default_blue_color"   
      />        
</RelativeLayout>
 
 <RelativeLayout   
    android:id="@+id/per_detail_rl_nickname"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_horizontal"  
    android:orientation="vertical" >
   <TextView 
       android:id="@+id/per_detail_tv_nickname"
       android:layout_width="wrap_content"
       android:layout_centerVertical="true"   
       android:layout_alignParentLeft="true"
       android:layout_height="wrap_content"
       android:text="王萌"      
       />   
                     
    <ImageView       
       android:layout_width="20dp"
       android:layout_height="10dp"       
       android:layout_alignParentRight="true"  
       android:layout_centerVertical="true"    
       android:background="@color/default_blue_color"   
      />        
</RelativeLayout>
 <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/contact_default_bk"        
        />

 <RelativeLayout   
    android:id="@+id/per_detail_rl_email"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_horizontal"  
    android:orientation="vertical" >
   <TextView 
       android:id="@+id/per_detail_tv_email"
       android:layout_width="wrap_content"
       android:layout_centerVertical="true"   
       android:layout_alignParentLeft="true"
       android:layout_height="wrap_content"
       android:text="邮箱"      
       />   
                     
    <ImageView       
       android:layout_width="20dp"
       android:layout_height="10dp"       
       android:layout_alignParentRight="true"  
       android:layout_centerVertical="true"    
       android:background="@color/default_blue_color"   
      />        
</RelativeLayout>
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/contact_default_bk"        
        />
    <RelativeLayout   
    android:id="@+id/per_detail_rl_certtype"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_horizontal"  
    android:orientation="vertical" >
   <TextView 
       android:id="@+id/per_detail_tv_certtype"
       android:layout_width="wrap_content"
       android:layout_centerVertical="true"   
       android:layout_alignParentLeft="true"
       android:layout_height="wrap_content"
       android:text="证件类型："      
       />   
              
    <ImageView       
       android:layout_width="20dp"
       android:layout_height="10dp"       
       android:layout_alignParentRight="true"  
       android:layout_centerVertical="true"    
       android:background="@color/default_blue_color"   
      />        
</RelativeLayout>
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/contact_default_bk"
        
        />
    <RelativeLayout   
    android:id="@+id/per_detail_rl_username"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_horizontal"  
    android:orientation="vertical" >
   <TextView 
       android:id="@+id/per_deatil_tv_userName"
       android:layout_width="wrap_content"
       android:layout_centerVertical="true"   
       android:layout_alignParentLeft="true"
       android:layout_height="wrap_content"
       android:text="用户名："      
       />   
              
    <ImageView        
       android:layout_width="20dp"
       android:layout_height="10dp"       
       android:layout_alignParentRight="true"  
       android:layout_centerVertical="true"    
       android:background="@color/default_blue_color"   
      />        
</RelativeLayout>
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/contact_default_bk"
        
        />
    <RelativeLayout   
        android:id="@+id/per_detail_rl_certno"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_horizontal"  
    android:orientation="vertical" >
   <TextView 
       android:id="@+id/per_deatil_tv_certno"
       android:layout_width="wrap_content"
       android:layout_centerVertical="true"   
       android:layout_alignParentLeft="true"
       android:layout_height="wrap_content"
       android:text="证件号码："      
       />   
              
    <ImageView       
       android:layout_width="20dp"
       android:layout_height="10dp"       
       android:layout_alignParentRight="true"  
       android:layout_centerVertical="true"    
       android:background="@color/default_blue_color"   
      />        
</RelativeLayout>
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/contact_default_bk"
        />
        <RelativeLayout   
             android:id="@+id/per_detail_rl_brithday"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_horizontal"  
    android:orientation="vertical" >
   <TextView 
       android:id="@+id/per_detail_tv_brithday"
       android:layout_width="wrap_content"
       android:layout_centerVertical="true"   
       android:layout_alignParentLeft="true"
       android:layout_height="wrap_content"
       android:text="生日："      
       />   
              
    <ImageView        
       android:layout_width="20dp"
       android:layout_height="10dp"       
       android:layout_alignParentRight="true"  
       android:layout_centerVertical="true"    
       android:background="@color/default_blue_color"   
      />        
</RelativeLayout>
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/contact_default_bk"
        />
        <RelativeLayout   
             android:id="@+id/per_detail_rl_mobile"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_horizontal"  
    android:orientation="vertical" >
   <TextView 
       android:id="@+id/per_detail_tv_mobile"
       android:layout_width="wrap_content"
       android:layout_centerVertical="true"   
       android:layout_alignParentLeft="true"
       android:layout_height="wrap_content"
       android:text="邮箱"      
       />   
              
    <ImageView        
       android:layout_width="20dp"
       android:layout_height="10dp"       
       android:layout_alignParentRight="true"  
       android:layout_centerVertical="true"    
       android:background="@color/default_blue_color"   
      />        
</RelativeLayout>
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/contact_default_bk"
        />
       
    
</LinearLayout>
</ScrollView>
