<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/main_top"
        layout="@layout/main_top" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_top"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="我的"
        android:textColor="@color/default_light_black_color"
        android:textSize="@dimen/text_size_mid" />

    <TextView
        android:id="@+id/login_out"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/red"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="登出"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_mid" />

    <TextView
        android:id="@+id/personinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/getpwd"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/red"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="个人信息"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_mid" />

    <TextView
        android:id="@+id/getpwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setpwd"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/red"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="找回密码"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_mid" />

    <TextView
        android:id="@+id/setpwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_out"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/red"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="修改密码"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_mid" />

</RelativeLayout>